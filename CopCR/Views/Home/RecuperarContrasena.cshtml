@model CopCR.Models.Autenticacion

@{
    ViewBag.Title = "Recuperar Contraseña";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<section class="login_section">
    <div class="login_card">
        <h2>Recuperar Contraseña</h2>

        @using (Html.BeginForm("RecuperarContrasena", "Home", FormMethod.Post, new { @class = "form-horizontal m-t-20" }))
        {
            if (!string.IsNullOrEmpty(ViewBag.Mensaje as string))
            {
                <div class="alert alert-warning text-center">
                    @ViewBag.Mensaje
                </div>
            }

            <div class="form-group">
                <label for="Email">Correo Electrónico</label>
                @Html.TextBoxFor(m => m.Email, new
                {
                    @type = "email",
                    @class = "form-control",
                    @placeholder = "Ingresa tu correo electrónico",
                    @required = "required"
                })
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-login">Enviar</button>
            </div>

            <div class="text-link text-center">
                <p>
                    ¿Ya tienes cuenta?
                    <a href="@Url.Action("Login", "Home")">Inicia Sesión</a>
                </p>
            </div>
        }
    </div>
</section>
