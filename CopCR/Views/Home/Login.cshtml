@model CopCR.Models.Autenticacion

@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<section class="login_section">
    <div class="login_card">
        <h2>Iniciar Sesión</h2>

        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal m-t-20" }))
        {
            if (!string.IsNullOrEmpty(ViewBag.Mensaje as string))
            {
                <div class="alert alert-warning text-center">
                    @ViewBag.Mensaje
                </div>
            }

            <div class="form-group">
                <label for="CedulaIdentidad">Cédula de Identidad</label>
                @Html.TextBoxFor(m => m.CedulaIdentidad, new
                {
                    @class = "form-control",
                    @placeholder = "Ingresa tu cédula de identidad",
                    @required = "required"
                })
            </div>

            <div class="form-group">
                <label for="Contrasena">Contraseña</label>
                @Html.PasswordFor(m => m.Contrasena, new
                {
                    @class = "form-control",
                    @placeholder = "Ingresa tu contraseña",
                    @required = "required"
                })
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-login">Ingresar</button>
            </div>

            <div class="text-link text-center">
                <p>
                    ¿No tienes cuenta?
                    <a href="@Url.Action("RegistroUsuario", "Home")">Regístrate</a>
                </p>
                <p>
                    ¿Olvidaste tu contraseña?
                    <a href="@Url.Action("RecuperarContrasena", "Home")">Recupérala aquí</a>
                </p>
            </div>
        }
    </div>
</section>
